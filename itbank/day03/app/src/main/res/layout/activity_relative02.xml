<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".example03.RelativeActivity02">

    <Button
        android:id="@+id/button_base"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:text="기준 버튼" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/button_base"
        android:layout_toStartOf="@+id/button_base"
        android:layout_toLeftOf="@+id/button_base" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/button_base"
        android:layout_toStartOf="@+id/button_base"
        android:layout_toLeftOf="@+id/button_base" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/button_base"
        android:layout_toStartOf="@+id/button_base"
        android:layout_toLeftOf="@+id/button_base" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/button_base"
        android:layout_alignStart="@+id/button_base"
        android:layout_alignLeft="@+id/button_base" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/button_base"
        android:layout_alignEnd="@+id/button_base"
        android:layout_alignRight="@+id/button_base" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/button_base"
        android:layout_toEndOf="@+id/button_base"
        android:layout_toRightOf="@+id/button_base" />
</RelativeLayout>