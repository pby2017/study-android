<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".example01.IntentActionActivity">

    <Button
        android:id="@+id/button_implicit_intent_call"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CALL"/>

    <Button
        android:id="@+id/button_implicit_intent_web"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="INTERNET"/>

    <Button
        android:id="@+id/button_implicit_intent_geomap"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="GEOMAP"/>

    <Button
        android:id="@+id/button_implicit_intent_sms"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SMS"/>

    <Button
        android:id="@+id/button_implicit_intent_photo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="PHOTO"/>

    <Button
        android:id="@+id/button_implicit_intent_web_search"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="WEB SEARCH"/>
</LinearLayout>